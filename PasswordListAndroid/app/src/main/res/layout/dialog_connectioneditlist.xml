<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTitleViewBackGround"
        android:padding="3dp">

        <ImageView
            android:id="@+id/PropertyDialog_Image"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/TextView_Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|start"
            android:padding="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="接続先編集一覧"
            android:textColor="@color/colorTitleViewText"
            android:textSize="17sp" />
    </LinearLayout>

    <!-- セパレータ -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/LinearLayout_ItemTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Button_Add"
                style="@style/ButtonRippleAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="45dp"
                android:text="＋　新規追加"
                android:textColor="@color/colorDarkGray"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>

    <!-- セパレータ -->
    <android.ochawanz.passwordlistandroid.layout.Separator
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/colorPrimary">

    </android.ochawanz.passwordlistandroid.layout.Separator>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button_Cancel"
            style="@style/ButtonAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="45dp"
            android:text="キャンセル"
            android:textColor="@color/colorDarkGray"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Button_OK"
            style="@style/ButtonAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="45dp"
            android:text="OK"
            android:textColor="@color/colorDarkGray"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>